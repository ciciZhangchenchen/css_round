<!--index.wxml-->
<view class="container">
  <swiper
    indicator-dots="true" autoplay="true" circular="false"
    interval="2000" duration="500" previous-margin="0px" next-margin="0x">
    <block wx:for="{{background}}" wx:key="*this">
      <swiper-item>
        <view class="swiper-item {{item}}"><text>{{item}}</text></view>
      </swiper-item>
    </block>
  </swiper>
  <view class="home-nav">
    <view class='item item1' id="product" bindtap="bindViewTap">part1</view>
    <view class='item item2' id="appoint" bindtap="bindViewTap">part2</view>
    <view class='item item3'>part3</view>
    <view class='item item4'>part4</view>
  </view>
</view>
