/**index.wxss**/
.searchbar {
  display: flex;
  flex-direction: row;
  padding: 10px 0;
}
.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}
.content .item {
  width: 49%;
  display: flex;
  flex-direction: column;
  margin: 4px 1px;
}
.item-image {
  width: 100%;
  height: 120px;
}
.item-inner {
  display: flex;
  flex-direction: column;
  padding: 2px 4px;
  font-size: 12px;
  border: 1px solid #e0e0e0;
  border-top: none;
}
.price {
  font-size: 15px;
  color: #f76a1e;
}
.subtitle {
  color: #666;
  font-size: 10px;
}
.item-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.item-price .buy {
  color: #fff;
  background: #f76a1e;
  padding: 2px 10px;
}